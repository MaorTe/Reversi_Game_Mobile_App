<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="180" android:endColor="@color/colorYellow" android:startColor="@color/colorWhite"/>
            <stroke android:width="2dp" android:color="@color/colorBlack"/>
            <padding android:top="12dp" android:right="12dp" android:left="12dp"
                android:bottom="12dp"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorYellow" android:startColor="@color/colorWhite"/>
            <stroke android:width="2dp" android:color="@color/colorBlack"/>
            <padding android:top="12dp" android:right="12dp" android:left="12dp"
                android:bottom="12dp"/>
        </shape>

    </item>
</selector>