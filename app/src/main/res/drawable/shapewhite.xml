<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                <gradient android:angle="270" android:endColor="@color/colorWhite" android:startColor="@color/colorWhite"/>
                <stroke android:width="2dp" android:color="@color/colorBlack"/>
                <padding android:top="8dp" android:right="8dp" android:left="8dp"
                    android:bottom="8dp"/>
                <corners android:radius="50dp"/>
            </shape>

        </item>
    </selector>
